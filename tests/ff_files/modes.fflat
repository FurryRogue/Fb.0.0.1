midi piano = 0, 255

voice x piano { C } ionian { 1 2 3 4 5 6 7 8 }
rhythm  h (4 / 4) 1 |: 8 8 8 8 8 8 8 8 :|

// This composition plays all of the modes of the diatonic scale.
composition main =
   ({C } ionian x)     <- h;
   ({C } dorian x)     <- h;
   ({C } phrygian x)   <- h;
   ({C } lydian x)     <- h;
   ({C } mixolydian x) <- h;
   ({C } aeolian x)    <- h;
   ({C } locrian x)    <- h
