composition main =
   ({C } ionian x) <- h;
   ({C#} ionian x) <- h;
   ({D } ionian x) <- h;
   ({D#} ionian x) <- h;
   ({E } ionian x) <- h;
   ({F } ionian x) <- h;
   ({F#} ionian x) <- h;
   ({G } ionian x) <- h;
   ({G#} ionian x) <- h;
   ({A } ionian x) <- h;
   ({A#} ionian x) <- h;
   ({B } ionian x) <- h



